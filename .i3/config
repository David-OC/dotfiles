exec --no-startup-id "i3-msg 'workspace 1: ; append_layout /home/davidoc/.i3/layouts/ws1.json'"
#exec --no-startup-id "i3-msg 'workspace 2:  ; append_layout /home/davidoc/.i3/layouts/ws2.json'"
