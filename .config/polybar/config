[colors]
background = ${xrdb:color0:#222}
background-alt = ${xrdb:color2:#222}
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}

[bar/top_bar]
width = 100%
height = 32
radius = 12
fixed-center = false

tray-position = right
#tray-transparency = true
#tray-offset-x = -25%

background = ${colors.background}
foreground = ${colors.foreground}

border-size = 8
border-color = #00000000

underline-size = 4
underline-color = ${colors.secondary}

padding-left = 0
padding-right = 2

module-margin-left = 4
module-margin-right = 4

font-0 = FontAwesome:size=8;0
font-1 = "SF Mono:size=8"
font-2 = "Material:size=10;1"

;font-0 = FontAwesome:size=12;0
;font-1 = "SF Mono:size=12"
;font-2 = "Material:size=10;1"
modules-left = i3
modules-center = xwindow
modules-right = xbacklight pulseaudio memory cpu temperature filesystem wlan battery date powermenu

wm-restack = i3

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:70:...%

[module/filesystem]
type = internal/fs
